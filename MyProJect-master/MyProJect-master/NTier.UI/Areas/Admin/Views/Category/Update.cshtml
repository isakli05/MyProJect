@{
    ViewBag.Title = "Kategori Ekleme Ekranı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using NTier.UI.Areas.Admin.Models
@model CategoryVM

@using (Html.BeginForm("Update", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(cat => cat.Name)
        @Html.TextBoxFor(cat => cat.Name, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(cat => cat.Description)
        @Html.TextBoxFor(cat => cat.Description, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(cat => cat.ID)
    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
}



@{
    ViewBag.Title = "Kategori Ekleme Ekranı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using NTier.Model.Model.Entities
@model Category

@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(cat => cat.Name)
        @Html.TextBoxFor(cat => cat.Name, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(cat => cat.Description)
        @Html.TextBoxFor(cat => cat.Description, new { @class = "form-control" })
    </div>
    <input type="submit" value="Ekle" class="form-control btn btn-primary" />
}